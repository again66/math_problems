<!--pages/compute/simpleAddSub/index.wxml-->
<view>
  <view class="container">
    <h1>请选择出题范围？多少以内的加减法呢？</h1>
    <view class="selecter">
      <button type="{{currentRange==10?'primary':'default'}}" data-range="10" bindtap="changeRange">10</button>
      <button type="{{currentRange==20?'primary':'default'}}" data-range="20" bindtap="changeRange">20</button>
      <button type="{{currentRange==30?'primary':'default'}}" data-range="30" bindtap="changeRange">30</button>
      <button type="{{currentRange==50?'primary':'default'}}" data-range="50" bindtap="changeRange">50</button>
      <button type="{{currentRange==100?'primary':'default'}}" data-range="100" bindtap="changeRange">100</button>
    </view>
    

    <h1>请选择出多少道题目呢？</h1>
    <view class="selecter">
      <button type="{{currentTotal==50?'primary':'default'}}" data-total="50" bindtap="changeTotal">50</button>
      <button type="{{currentTotal==100?'primary':'default'}}" data-total="100" bindtap="changeTotal">100</button>
      <button type="{{currentTotal==300?'primary':'default'}}" data-total="300" bindtap="changeTotal">300</button>
      <button type="{{currentTotal==500?'primary':'default'}}" data-total="500" bindtap="changeTotal">500</button>
      <button type="{{currentTotal==1000?'primary':'default'}}" data-total="1000" bindtap="changeTotal">1000</button>
    </view>


    <button id="startTest" type="primary" bindtap="startTest">我们开始吧</button>
    
  </view>
  
  <view class="container">
        <view class="progress-container">
            <view class="progress-info">
                <span>进度: <span id="progressText">1/10</span></span>
                <span>错误: <span id="wrongCount">0</span></span>
            </view>
            <view class="progress-bar">
                <view class="progress" style="width: 10%;"></view>
            </view>
        </view>
        <view class="selecter {{errorShake? ' shake' : ''}}">
          <view id="problem">{{currentProblem}}</view>
        <view><input type="number" bindinput="inputChange" value="{{userAnswer}}" focus="{{inputFocus}}" /></view>
        </view>
        
        <button id="startTest" type="primary" bindtap="startTest">下一题</button>
        <view id="feedback"></view>
    </view>
</view>