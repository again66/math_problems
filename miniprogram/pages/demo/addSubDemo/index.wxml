 <!-- 复制元素的容器 -->
<view class="clone-container">
  <block wx:for="{{cloneElements}}" wx:key="id">
    <text 
      class="clone-text {{item.animationClass}}" 
      style="left: {{item.startX}}px; top: {{item.startY}}px;"
      data-id="{{item.id}}"
    >{{item.text}}</text>
  </block>
</view>
 
 <!-- 竖式计算区域 -->
 <view class="vertical-equation">
    <!--计算动画演示 -->
    
    <view class="number-row result-step">
        <view wx:for="{{processSteps}}" wx:key="index" class="digit-cell"  id="res-{{index}}" ><text>{{item.carryOut>0?item.carryOut:''}}</text><text>{{item.value}}</text></view>
    </view>
    <!--数字1 -->
    <view class="number-row">
        <view wx:for="{{num1Array}}" wx:key="index" class="digit-cell {{index==num1Selected?'selected':''}}" id="num1-{{index}}" >{{item}}</view>
    </view>
    
    <!-- 数字2 -->
    <view class="number-row">
        <!-- 计算符号 -->
        <view class="digit-cell operator">{{operator}}</view>
        <view wx:for="{{num2Array}}" wx:key="index" class="digit-cell {{index==num2Selected ? 'selected' : '' }}" id="num2-{{index}}" >{{item}}</view>
    </view>
    
    <!-- 横线 -->
    <view class="line"></view>
    
    <!-- 结果输入区域（逆向排列） -->
    <view class="result-inputs {{errorShake? ' shake' : ''}}">
        <input  wx:for="{{correctAnswerArray}}" wx:key="index" type="number" class="result-input" maxlength="1" data-val="{{item}}" data-index="{{index}}" placeholder="{{['个','十','百','千','万'][index]}}" bindinput="inputChange" focus="{{inputFocus==index}}"  value="{{userAnswer}}" /> 
    </view>


    <button bind:tap="nextProcess">next-></button>
</view>